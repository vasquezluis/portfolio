---
import School from "./icons/School.astro"

interface Props {
	school: string
	date: string
	description: string
}

const { school, date, description } = Astro.props
---

<li class="mb-6 ms-4">
	<div
		class="absolute -start-1.5 mt-1.5 size-3 rounded-full bg-neutral-800 ring-8 ring-neutral-800"
	>
		<School class="absolute -left-1.5 -top-1.5 size-6" />
	</div>
	<div class="mt-3 sm:pe-8">
		<h3 class="text-lg font-semibold text-[#0891b2]">{description}</h3>
		<time class="mb-2 block text-sm font-normal leading-none text-neutral-500">{date}</time>
		<p class="text-base font-normal text-neutral-300">
			{school}
		</p>
	</div>
</li>
