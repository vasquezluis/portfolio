---
const Links = [
	{ href: "#info", label: "Información" },
	{ href: "#projects", label: "Proyectos" },
	{ href: "#experience", label: "Experiencia" },
	{ href: "#technologies", label: "Tecnologías" },
	{ href: "#study", label: "Estudios" },
]
---

<footer
	class="m-4 mx-auto mb-10 w-full rounded-lg bg-neutral-900/50 shadow backdrop-blur-lg lg:w-[1120px]"
>
	<div class="mx-auto w-full max-w-screen-xl p-4 md:flex md:items-center md:justify-between">
		<span class="text-sm text-[#0891b2] font-bold sm:text-center">vasquezluis</span>
		<ul class="mt-3 flex flex-wrap items-center text-sm font-medium text-white/90 sm:mt-0">
			{
				Links.map((item) => (
					<li>
						<a href={item.href} class="me-4 hover:underline md:me-6">
							{item.label}
						</a>
					</li>
				))
			}
		</ul>
	</div>
</footer>
