---
interface Props {
	date: string
	title: string
	company: {
		name: string
		link: string
	}
	description: string
	link?: string
}

import SocialPill from "./SocialPill.astro"

const { date, title, company, description, link } = Astro.props
---

<li class="mb-10 ms-4">
	<div
		class="absolute -start-1.5 mt-1.5 h-3 w-3 rounded-full border border-gray-200/80 bg-gray-200/80"
	>
	</div>
	<time class="mb-1 text-sm font-normal leading-none text-sky-200/80">{date}</time>
	<h3 class="mt-2 text-lg font-semibold text-yellow-200">
		{title}
	</h3>
	<a href={company.link} target="_blank" rel="noopener noreferrer">
		<span class="text-xs text-yellow-200/90">{company.name}</span>
	</a>
	<p class="mb-4 text-pretty text-base font-normal text-gray-200">
		{description}
	</p>
	{
		link && (
			<SocialPill link={link}>
				Saber m√°s{" "}
				<svg
					class="ms-2 h-3 w-3 rtl:rotate-180"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 14 10"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M1 5h12m0 0L9 1m4 4L9 9"
					/>
				</svg>
			</SocialPill>
		)
	}
</li>
