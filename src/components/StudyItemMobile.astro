---
interface Props {
	school: string
	date: string
	description: string
	award: string | undefined
}

const { school, date, description, award } = Astro.props
---

<li class="mb-6 ms-4">
	<div
		class="absolute -start-2.5 mt-1.5 flex size-5 items-center justify-center rounded-full bg-neutral-800 ring-8 ring-neutral-800"
	>
		<img src="/icons/School.svg" alt="School icon" class="size-8" loading="lazy" />
	</div>
	<div class="mt-3 pl-3 sm:pe-8">
		<h3 class="text-lg font-semibold text-[#0891b2]">{description}</h3>
		<time class="mb-2 block text-sm font-normal leading-none text-neutral-500">{date}</time>
		<p class="text-base font-normal text-neutral-300">
			{school}
		</p>
		{
			award && (
				<div class="mt-1 flex items-center justify-start gap-x-1">
					<img src="/icons/Award.svg" alt="Award icon" loading="lazy" />
					<span class="text-sm text-yellow-300/60">{award}</span>
				</div>
			)
		}
	</div>
</li>
