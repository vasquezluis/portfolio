---
interface Props {
	title: string
	icon: string
	styles: string
}

const { title, icon, styles } = Astro.props
---

<div
	class:list={"tech-card hover:shadow-[var(--tech-color)]/30 group relative flex flex-col items-center justify-center rounded-xl border border-white/10 bg-white/5 p-4 text-sm font-medium text-neutral-200 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"}
	style={`--tech-color: var(--default-color, #60a5fa); ${styles}`}
>
	<div
		class="from-[var(--tech-color)]/10 absolute inset-0 rounded-xl bg-gradient-to-b to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
	>
	</div>

	<img class="relative z-10 mb-2 size-12" alt={`${title} logo`} src={icon} loading="lazy" />
	<span class="relative z-10 text-sm font-semibold tracking-wide">{title}</span>
</div>

<style is:inline>
	.tech-card {
		backdrop-filter: blur(10px);
	}
</style>
