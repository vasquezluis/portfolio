---
interface Props {
	title: string
	icon: string
	styles: string
}

const { title, icon, styles } = Astro.props
---

<div
	class:list={`${styles} flex h-28 transform flex-col items-center justify-center rounded-lg shadow-md shadow-neutral-900 transition duration-300 hover:scale-105`}
>
	<img class="mb-2 size-12" alt={`${title}-img`} src={icon} />
	<span class="font-medium">{title}</span>
</div>
