---
interface Props {
	title: string
	icon: string
	styles: string
}
const { title, icon, styles } = Astro.props
---

<div
	class:list={"tech-card hover:shadow-[var(--tech-color)]/40 group relative flex items-center justify-center gap-x-2 rounded-lg border border-white/10 bg-white/5 px-3 py-2 text-sm font-medium text-neutral-200 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:bg-white/10 hover:shadow-lg"}
	style=`--tech-color: var(--default-color, #60a5fa); ${styles}`
>
	<div
		class="from-[var(--tech-color)]/15 absolute inset-0 rounded-lg bg-gradient-to-r to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
	>
	</div>
	<img
		class="relative z-10 size-6 transition-transform duration-300 group-hover:scale-110"
		alt=`${title} logo`
		src={icon}
		loading="lazy"
	/>
	<span class="relative z-10 cursor-default whitespace-nowrap text-sm font-semibold tracking-wide"
		>{title}</span
	>
</div>

<style is:inline>
	.tech-card {
		backdrop-filter: blur(10px);
		min-width: fit-content;
	}

	.tech-card:hover {
		border-color: rgba(255, 255, 255, 0.2);
	}

	@media (max-width: 640px) {
		.tech-card {
			font-size: 0.75rem;
			padding: 0.375rem 0.75rem;
		}

		.tech-card img {
			width: 1.25rem;
			height: 1.25rem;
		}
	}
</style>
