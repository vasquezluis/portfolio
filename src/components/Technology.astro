---
interface Props {
	title: string
	icon: string
	styles: string
}

const { title, icon, styles } = Astro.props
---

<div
	class:list={`${styles} glass-hover flex h-28 transform flex-col items-center justify-center rounded-lg shadow-md shadow-neutral-900`}
>
	<img class="mb-2 size-12" alt={`${title}-img`} src={icon} />
	<span class="font-medium">{title}</span>
</div>

<style is:inline>
	.glass-hover {
		position: relative;
		overflow: hidden;
		transition:
			transform 0.3s ease,
			box-shadow 0.3s ease;
		will-change: transform;
	}

	.glass-hover::before {
		content: "";
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: linear-gradient(
			135deg,
			rgba(255, 255, 255, 0.15) 0%,
			rgba(255, 255, 255, 0.05) 40%,
			rgba(255, 255, 255, 0) 60%
		);
		transform: rotate(0deg);
		transition: transform 0.7s ease;
		pointer-events: none;
	}

	.glass-hover:hover::before {
		transform: rotate(45deg) translate(10%, 10%);
	}
</style>
