---
interface Props {
	link: string
}

const { link } = Astro.props
---

<a
	class="flex items-center justify-center gap-x-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 transition hover:scale-105 hover:bg-white/10"
	href={link}
	target="_blank"
	rel="noopener noreferrer"
>
	<slot />
</a>
